#----------------------------------------------------------------------------------------------------------------------------------------
#ZUUL
zuul:
    ignored-services: '*'
    ignore-security-headers: false
    host:
        connect-timeout-millis: 2000
        socket-timeout-millis: 5000
    #prefix: /amy
        routes:
            server_security:
                path: /oauth/v1/**
                #url: http://localhost:8020/oauth/v1
                url: server_security
            #server_security:
            #    path: /oauth/**
            #    url: http://localhost:8020/oauth
                #sensitive-headers: Cookie,Set-Cookie
                service-id: server_security
                #strip-prefix: false
            service_product:
                path: /product/v1/**
                #url: http://localhost:8102/product/v1
                url: service_product
                #sensitive-headers: null
                service-id: service_product
                #strip-prefix: false

    #zuul.routes.middleware.path=/cart/**
    #zuul.routes.middleware.url=http://localhost:8081/

#management:
#    endpoints:
#        web:
#            exposure:
#                include: '*'
#    endpoint:
#        health:
#            show-details: ALWAYS

#----------------------------------------------------------------------------------------------------------------------------------------
#EUREKA
eureka:
    client:
        #No registrarse
        register-whit-eureka: true
        #Obtener entradas de registro
        fetch-registry: true
        service-url:
            defaultZone: http://localhost:8010/eureka/
    #ver si esto sirve
    instance:
        instance-id: ${spring.application.name}:${spring.application.instance_id:${random.value}}

